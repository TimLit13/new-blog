<!DOCTYPE html>
<html>
  <head>
    <title>blog_youtube_2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link <%= 'active' if current_page?(root_path) || current_page?(posts_path) %>" aria-current="page" href="<%= root_path %>">Все статьи</a>
              </li>


              <% Category.order(:name).roots.each do |category| %>
                <li class="nav-item <%= 'active' if current_page?(category_path(category))%>">
                <%= link_to category.name, category, class: 'nav-link'%>
                </li>
              <% end %>


              <li class="nav-item">
                <a class="nav-link" href="#">Контакты</a>
              </li>
            </ul>

<!--  -->
<!--  -->
<!--  -->

            <ul class="navbar-nav mb-2 mb-lg-0 justify-content-end">
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to 'Выход', destroy_user_session_path, method: :delete, class: 'nav-link'%>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to 'Вход', new_user_session_path, class: 'nav-link'%>
                </li>
                <li class="nav-item">
                  <%= link_to 'Регистрация', new_user_registration_path, class: 'nav-link'%>
                </li>
              <% end %>
            </ul>
<!--  -->
<!--  -->
<!--  -->




            <form class="d-flex">
              <%= link_to 'Создать статью', new_post_path, class: "btn btn-sm btn-outline-success pull-xs-right" %>
            </form>
          </div>
        </div>
      </nav>
    </div>

    <div class="container main">
      <div class="row">
        <div class = "col-md-12">
          <% flash.each do |name, message|%>
            <div class = "alert alert-<%=bootstrap_class_for(name) %>" >
              <button class="close" data-dismiss="alert">&times;</button>
              <%= message %>
            </div>
          <% end %>          
        </div>
      </div>

      <div class="row">
        <div class = "col-md-9">
          <%= yield %>
        </div>
        <div class = "col-md-3 tags-cloud">
          <div>
            <h3>
              <%= t('common.popular_tags') %>
            </h3>  
          </div>
          <div>
            <% if Tag.any? %>
              <% tag_cloud(Tag.counts, %w{tag1 tag2 tag3 tag4 tag5}) do |tag, css_class| %>
                <span class="badge rounded-pill bg-secondary">
                  <%= link_to tag.name, tag_path(tag.name), class: css_class  %>
                </span>
              <% end %>
            <% end %>
          </div>
          <div>
            <%= render 'shared/submenu' %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
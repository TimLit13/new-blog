<h2><%= t('devise.sessions.log_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-3">
    <%= f.label t('devise.sessions.email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label t('devise.sessions.password') %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check form-switch">
      <%= f.check_box :remember_me, class: "form-check-input" , type: "checkbox", id: "flexSwitchCheckDefault" %>
      <%= f.label t('devise.sessions.remember_me'), class: "form-check-label", for: "flexSwitchCheckDefault" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('devise.sessions.log_in'), class: 'btn btn-outline-secondary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

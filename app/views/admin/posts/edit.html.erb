<div class="container">
	<div class="row">
		<div class="col"></div>
		<div class="col-8">
			<h1 class="display-5 main"><%= t('common.article_edit')%><%= @post.title%></h1>
		</div>
		<div class="col"></div>
	</div>
</div>

<%= render 'error_messages'%>

<div class="container">
	<div class="row">
		<div class="col"></div>
		<div class="col-8">
			<%= form_for [:admin, @post], url: admin_post_path(@post), method: :put, local: false do |f| %>
				<div class = "form-group">
					<%= f.label :title%>
					<%= f.text_field :title, class: 'form-control'%>
				</div>
				<br>

				<div class = "form-group">
					<%= f.label :summary %>
					<%= f.text_area :summary, class: 'form-control'%>
				</div>
				<br>

				<div class = "form-group">
					<%= f.label :body %>
					<%= f.trix_editor :body, class: 'editor' %>
				</div>
				<br>

				<div class = "form-group">
					<%= f.label :category_id %>
					<%= f.collection_select :category_id, Category.all.order(name: :asc), :id, :name, { include_blank: true }, class: 'form-control' %>
				</div>
				<br>

				<div class = "form-group">
					<%= f.label :all_tags %>
					<%= f.text_field :all_tags, class: 'form-control' %>
				</div>
				<br>

				<div class = "form-group">
					<%= f.file_field :image %>
				</div>
				<br>

				<div class = "form-group">
					<%= f.submit t('common.apply'), class: 'btn btn-outline-success' %>
					<%= link_to t('common.back'), :back, class: 'btn btn-outline-secondary'  %>
				</div>
			<% end %>		
		</div>
		<div class="col"></div>
	</div>
</div>

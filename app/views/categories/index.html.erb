<h1><%= t('common.categories_all') %></h1>

<div class="buttons_pannel">
	<%= link_to 'Новая категория', new_category_path, class: 'btn btn-outline-success' %>
</div>

<div id="categories" class= "text-center">
	<table class="table table-striped table-hover">
		
		<thead class="table-dark">
			<tr>
				<th><%= t('common.category_number') %></th>
				<th><%= t('common.category_name') %></th>
				<th><%= t('common.category_actions') %></th>
			</tr>
		</thead>

		<tbody>
			<% @categories.each_with_index do |category, index|%>
				<tr>
					<td><%= index + 1 %></td>
					<td><%= category.name %></td>
					<td>
						<%= link_to "#{t('common.update')}", edit_category_path(category), class: 'btn btn-outline-secondary btn-sm' %>

						<%= link_to "#{t('common.delete')}", category_path(category), method: :delete, class: 'btn btn-outline-danger btn-sm', data: { confirm: "#{t('common.category_delete_confirm')}" } %>
					</td>
				</tr>
			<% end %>
		</tbody>

	</table>
</div>